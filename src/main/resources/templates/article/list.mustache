{{>layouts/header}}

<div class="container">
    <h1>list page</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Contents</th>
        </tr>
        </thead>
        {{#articleList}}
            <tbody>
            <tr>
                <td>{{id}}</td>
                <td><a href="/article/detail/{{id}}">{{title}}</a></td>
